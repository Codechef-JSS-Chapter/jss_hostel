<%-include('../tamplate');-%>
<style type="text/css">
	.bigBox{
		margin-left: 350px;
	}
	.title{
	font-size: 50px;
	margin-bottom: 0px;
	margin-top: 20px;
	}
	.subtitle{
		font-size: 30px;
		margin-top: 0px;
	}
	input{
		font-size: 25px;
		margin-bottom: 20px;
	}
	.verifyBtn{
		font-size: 25px;
	}
	.error{
			font-size: 25px;
	}
	textarea{
		width: 31%;
		height: 50px;
		font-size: 25px;
	}
	.primaryBtn{
		font-size: 25px;
		margin-top: 20px;
	}
/*---------------------------------------------------------------responsive----------*/


@media(max-width: 1000px){
	.bigBox{
		margin:0px 20px;
	}
@media(orientation: portrait){
	input{
		width: 100%;
		box-sizing: border-box;
	}
	.verifyBtn{
		margin-top: 10px;
	}
	.error{
		font-size: 25px;
		text-align: center;
	}
	.mainBtn{
		padding: 20px 0 ;
		width: 100%;
		box-shadow: 5px 15px 10px 1px #a0a1a2;
	}
	button{
		width: 100%;
		background-color: #050505;
		color: white;
	}
	button:disabled {
		width: 100%;
	    color: white;
	    background-color: rgba(0, 0 , 0, 1);
	    opacity: 0.2;
	}
	.primaryBtn{
		padding: 10px 0;
		font-size: 25px;
		position: absolute;
		left: 0;
		bottom: 0;
	}
	textarea{
		width: 100%;
		height: 120px;
		margin-top: 10px;
		font-size: 25px;
	}
}	
</style>
<div class="bigBox">
	<h2 class="title">Write</h2>
	<h3 class="subtitle">Application</h3>

	<form action="/verifyapplication" method="post">
		<input type="text" name="usn" placeholder="USN:1JSXXXXXXX" pattern="[0-9]{1}[A-Za-z]{2}[0-9]{2}[A-Za-z]{2}[0-9]{3}" title="Format type e.g: 1JS19IS005 or 1js19is005." required <%=status1%> value=<%=usnvalue%>>
		<button class="verifyBtn" type="submit" <%=status1%>>Verify</button>
	</form>

	<p class="error"><%=error%></p>
	
	<form action="/confirmapplication" method="post">
		<input placeholder="Subject" required type="text" name="subject" <%=status2%>>
		<br>
		<input placeholder="Submit to(Name)" required type="text" name="to" <%=status2%>>
		<br>
		<textarea placeholder="Message..." required name="body" <%=status2%>></textarea>
		<br>
		<button class="primaryBtn" type="Send" <%=status2%>>Send</button>
	</form>

</div>
<%-include('../tamplate2');-%>